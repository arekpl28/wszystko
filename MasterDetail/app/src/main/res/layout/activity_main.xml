<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.md.adrian.masterdetail.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.md.adrian.masterdetail.MasterFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/master_layout"/>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.md.adrian.masterdetail.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/detail_layout" />

</LinearLayout>
